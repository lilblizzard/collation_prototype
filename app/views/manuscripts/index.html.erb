<div class="container">
  <div class="row">
    <div class="col">
      <h2><b>Manuscripts</b></h2>
    </div>
    <div class="col">
      <% if account_signed_in? %>
        <%= link_to 'New Manuscript', new_manuscript_path, class: "btn btn-success float-right" %>
      <% else %>
        <%= link_to 'Log In to Create a New Manuscript', new_account_session_path, class: "btn btn-success float-right" %>
      <% end %>
    </div>
  </div>

  <div class="table-wrapper">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Shelfmark</th>
        <th>Quire count</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @manuscripts.each do |manuscript| %>
        <tr>
          <td><%= manuscript.shelfmark %></td>
          <td><%= manuscript.quire_count %></td>
          <td>
            <%= link_to '<i class="fas fa-eye"></i>'.html_safe, manuscript, class: "btn btn-outline-success" %>
            <%= link_to '<i class="fas fa-pen-fancy"></i>'.html_safe, edit_manuscript_path(manuscript), class: "btn btn-outline-primary" %>
            <%= link_to '<i class="fas fa-trash"></i>'.html_safe, manuscript, class: "btn btn-outline-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="container">
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newManuscriptModal">
    New Manuscript
  </button>

  <!-- The Modal -->
  <div class="modal" id="newManuscriptModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">New Manuscript</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <%= render 'form', manuscript: Manuscript.new %>
        </div>

        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>

      </div>
    </div>
  </div>

</div>